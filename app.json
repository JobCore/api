
{
  "addons": [
    "heroku-postgresql",
    "rollbar"
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "env": {
    "API_URL": {
      "required": true
    },
    "DATABASE_URL": {
      "required": true
    },
    "BROADCAST_NOTIFICATIONS_BY_EMAIL": {
      "required": true
    },
    "VALIDATE_CLOCKIN_DISTANCE": {
      "required": true
    },
    "DEBUG": {
      "required": true
    },
    "DISABLE_COLLECTSTATIC": {
      "required": true
    },
    "EMPLOYEE_URL": {
      "required": true
    },
    "EMPLOYER_URL": {
      "required": true
    },
    "ENABLE_NOTIFICATIONS": {
      "required": true
    },
    "ENVIRONMENT": {
      "required": true
    },
    "SECRET_KEY": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "name": "api",
  "scripts": {
      "postdeploy": "python manage.py migrate"
  },
  "stack": "heroku-18",
  "environments": {
    "production": {
        "scripts": {
            "test": "pytest"
        },
        "env": {
            "ROLLBAR_ENDPOINT": {
                "required": true
            },
            "ROLLBAR_POST_ACCESS_TOKEN": {
                "required": true
            },
            "FIREBASE_KEY": {
                "required": true
            },
            "MAILGUN_API_KEY": {
                "required": true
            },
            "MAILGUN_FROM": {
                "required": true
            }
        }
    },
    "test": {
        "addons": ["heroku-postgresql:in-dyno"],
        "scripts": {
            "test": "pytest"
        }
    },
    "review": {
        "addons": ["heroku-postgresql:in-dyno"],
        "scripts": {
            "test": "pytest",
            "postdeploy": "python manage.py migrate"
        }
    }
  }
}